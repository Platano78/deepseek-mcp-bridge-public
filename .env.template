# Smart MCP Bridge - Configuration Template
# Copy this to .env and configure your preferred APIs

# ================================
# Server Configuration
# ================================
NODE_ENV=development
HOST=127.0.0.1
PORT=3000
LOG_LEVEL=info

# ================================
# Cloud API Configuration (Choose 2)
# Configure any combination of cloud APIs
# ================================

# Option 1: OpenAI GPT Models
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=4096

# Option 2: Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4096

# Option 3: Google Gemini
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_BASE_URL=https://generativelanguage.googleapis.com/v1
GOOGLE_MODEL=gemini-pro
GOOGLE_MAX_TOKENS=4096

# Option 4: DeepSeek (Example)
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=4096

# Option 5: NVIDIA Cloud (Example)
NVIDIA_API_KEY=your-nvidia-api-key-here
NVIDIA_BASE_URL=https://integrate.api.nvidia.com/v1
NVIDIA_MODEL=your-preferred-model
NVIDIA_MAX_TOKENS=4096

# ================================
# API Selection (Configure which APIs to use)
# Set to the API names you configured above
# ================================
PRIMARY_API=openai
SECONDARY_API=anthropic
LOCAL_API=local

# ================================
# Local Model Configuration (Optional)
# Configure local model if available
# ================================
LOCAL_MODEL_ENABLED=false
LOCAL_MODEL_URL=http://localhost:11434/v1
LOCAL_MODEL_NAME=your-local-model
LOCAL_MODEL_MAX_TOKENS=8192

# ================================
# Smart Routing Configuration
# ================================
# Enable intelligent routing based on content
SMART_ROUTING_ENABLED=true
ROUTING_TIMEOUT_MS=5000
MAX_RETRIES=3

# Route to secondary API for analysis tasks
ANALYSIS_PATTERNS=analyze,calculate,statistics,research,strategy,balance
# Route to primary API for coding tasks
CODING_PATTERNS=function,class,debug,implement,code,api,javascript,python
# Route to local API for large content
LARGE_CONTENT_THRESHOLD=50000

# ================================
# Performance Settings
# ================================
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_MS=30000
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300

# ================================
# Security Settings
# ================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
VALIDATE_FILE_ACCESS=true
MAX_FILE_SIZE_MB=10